<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7e6f2"
    android:fillViewport="false">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        tools:context="com.example.android.calci.MainActivity"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/disp_total_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:text=""
                android:textAlignment="viewEnd"
                android:background="#ddd4d4"
                android:textColor="#000000"
                android:textSize="30dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:padding="0dp"
            android:orientation="vertical"
            android:background="#000000"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/no_1"
                    android:onClick="no_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />
                <Button
                    android:id="@+id/no_2"
                    android:onClick="no_2"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"
                    style="@style/styles_btn"
                    />

                <Button
                    android:id="@+id/no_3"
                    android:onClick="no_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />  <Button
                android:id="@+id/no_plus"
                android:onClick="plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="24sp"
                style="@style/styl_btn"
                />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"

                >
                <Button
                    android:id="@+id/no_4"
                    android:onClick="no_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />
                <Button
                    android:id="@+id/no_5"
                    android:onClick="no_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />
                <Button
                    android:id="@+id/no_6"
                    android:onClick="no_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />  <Button
                android:id="@+id/no_minus"
                android:onClick="subtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                style="@style/styl_btn"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                >
                <Button
                    android:id="@+id/no_7"
                    android:onClick="no_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />
                <Button
                    android:id="@+id/no_8"
                    android:onClick="no_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />
                <Button
                    android:id="@+id/no_9"
                    android:onClick="no_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"
                    android:textSize="24sp"
                    style="@style/styles_btn"
                    />  <Button
                android:id="@+id/no_divide"
                android:onClick="division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:textSize="24sp"
                style="@style/styl_btn"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"

                >

                <Button
                    android:onClick="power"
                    android:id="@+id/no_pow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="^"
                    android:textSize="24sp"
                    style="@style/sty_btn"
                    />
                <Button
                    android:onClick="no_0"
                    android:id="@+id/no_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="24sp"
                    style="@style/styles_btn"

                    />
                <Button
                    android:onClick="two0"
                    android:id="@+id/no_two0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="00"
                    android:textSize="24sp"
                    style="@style/sty_btn"

                    />
                <Button
                    android:id="@+id/no_mul"
                    android:onClick="multiplication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="X"
                    android:textSize="24sp"
                    style="@style/styl_btn"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"

                >
                <Button
                    android:id="@+id/no_clear"
                    android:onClick="clr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C"
                    android:textSize="24sp"
                    style="@style/styling_btn"
                    />
                <Button
                    android:id="@+id/decimal"
                    android:onClick="dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="."
                    android:textSize="24sp"
                    style="@style/st_btn"
                    />

                <Button
                    android:id="@+id/no_del"
                    android:onClick="del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DEL"
                    android:textSize="24sp"
                    style="@style/styling_btn"
                    />



            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <Button
        android:id="@+id/no_equal"
        android:onClick="equal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="="
        android:textSize="@android:dimen/notification_large_icon_height"
        android:layout_marginBottom="10dp"
        style="@style/style_btn"
        />
</LinearLayout>
        </LinearLayout>

</RelativeLayout>

    </LinearLayout>

</ScrollView>